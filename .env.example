# Application
NODE_ENV=production
APP_NAME=TicketForge
APP_URL=http://localhost:3080

# Server Ports
BACKEND_PORT=5080
FRONTEND_PORT=3080

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ticketforge
DB_USER=ticketforge_user
DB_PASSWORD=change_this_password

# JWT Authentication
# JWT_SECRET: A random secret key used to sign and verify user login tokens (like a password for the app)
# IMPORTANT: Change this to a long random string in production! Use at least 32 characters.
# Example to generate: openssl rand -base64 32
JWT_SECRET=change_this_to_a_random_secure_string
# JWT_EXPIRE: How long users stay logged in before needing to log in again (7d = 7 days)
JWT_EXPIRE=7d

# SMTP Email Configuration (OPTIONAL)
# Currently SMTP settings MUST be configured here - Web UI settings not yet implemented
# Leave blank to disable email notifications
# IMPORTANT: Values with spaces must be quoted, like: SMTP_FROM_NAME="My Company Support"
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME="Your Company Support"
SMTP_FROM_EMAIL=support@yourcompany.com

# File Upload Settings
# NOTE: Max file size and allowed file types are now configured in the Web UI Settings page
# Default: 25MB max file size

# Admin Account (created on first run)
ADMIN_EMAIL=admin@ticketforge.local
ADMIN_PASSWORD=admin123
ADMIN_USERNAME=admin
